<? foreach ($this->alerts as $item):?>
    <article class="container margins-medium">
        <div class="span2">
            <? if ($this->mode == "entity"):?>
                <? $imgUrl = $item->link?>
                <? $target = "target='_blank'";?>
            <? else: ?>
                <? $imgUrl = $this->url(array("id"=>$item->entity, Model_Static_Functions::dashString($item->entity->title)=>""), "entity", false)?>
            <?endif?>
            <a class="red-link" <?=$target?> title="<?=$item->entity->title?>" href="<?=$imgUrl?>">
                <? if ($item->picture): ?>
                    <img src="<?=$this->staticFile("images/alerts/".$item->picture)?>"><br/>
                <? else: ?>
                    <img src="<?=$this->staticFile("images/entities/".$item->entity->picture)?>">
                <? endif ?>
            </a>
        </div>
        <div class="span7">
            <h2 class="lower">
                <a target="_blank" class="red-link" href="<?=$item->link?>"><?=$item->title?></a>
            </h2>
            <p class="margins lower">
                <?=$item->body?>
            </p>
        </div>
        <div class="span1">
        </div>
        <div class="span1">
            <? if ($item->source == "youtube"):?>
                <h1>
                    <a class="red-link" <?=$target?> title="<?=$item->entity->title?>" href="<?=$imgUrl?>"><i class="fa fa-play-circle-o"></i></a>
                </h1>
            <? endif;?>
        </div>
        <div class="span1">
            <p class="gray"><?=date("F jS, Y",strtotime($item->added));?></p>
        </div>
    </article>
<?endforeach?>
