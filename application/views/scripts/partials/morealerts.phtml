<? foreach ($this->alerts as $item):?>
    <article class="container margins">
        <div class="span1">
            <? if ($this->mode == "entity"):?>
                <? $imgUrl = $item->link?>
            <? else: ?>
                <? $imgUrl = $this->url(array("id"=>$item->entity, Model_Static_Functions::dashString($item->entity->title)=>""), "entity", false)?>
            <?endif?>
            <a class="red-link" title="<?=$item->entity->title?>" href="<?=$imgUrl?>">
                <? if ($item->picture): ?>
                    <img src="<?=$this->staticFile("images/alerts/".$item->picture)?>"><br/>
                <? else: ?>
                    <img src="<?=$this->staticFile("images/entities/".$item->entity->picture)?>">
                <? endif ?>
            </a>
        </div>
        <div class="span9">
            <h2>
                <a class="red-link" href="<?=$item->link?>"><?=$item->title?></a>
                <? if ($item->source == "youtube"):?>
                    <span class="youtube">
                                    <i class="fa fa-youtube-play"></i>
                                </span>
                <? endif;?>
            </h2>
            <p>
                <?=$item->body?>
            </p>
        </div>
        <div class="span1">
        </div>
        <div class="span1">
            <p class="gray"><?=date("F jS, Y",strtotime($item->added));?></p>
        </div>
    </article>
<?endforeach?>
