<?$this->headTitle("TwentyTags - Feed")?>
<div class="toTop">
    <i class="btn-icon fa fa-angle-double-up"></i>
</div>
<div class="feed-container">
        <? foreach ($this->alerts as $item):?>
                <article class="alert-container">
                    <div class="entity">
                        <a class="red-link" title="<?=$item->entity->title?>" href="<?=$this->url(array("id"=>$item->entity, Model_Static_Functions::dashString($item->entity->title)=>""), "entity", false)?>">
                            <? if ($item->picture): ?>
                                <img src="<?=$this->staticFile("images/alerts/".$item->picture)?>"><br/>
                                <h5><?=$item->entity->title?></h5>
                            <? else: ?>
                                <img src="<?=$this->staticFile("images/entities/".$item->entity->picture)?>">
                            <? endif ?>
                        </a>
                    </div>
                    <div class="data">
                        <h3>
                            <a class="red-link" href="<?=$item->link?>"><?=$item->title?></a>
                            <? if ($item->source == "youtube"):?>
                                <span class="youtube">
                                    <i class="fa fa-youtube-play"></i>
                                </span>
                            <? endif;?>
                        </h3>
                        <h5><?=date("F jS, Y",strtotime($item->added));?></h5>
                        <p class="margins">
                            <?=$item->body?>
                        </p>
                    </div>
                </article>
        <?endforeach?>
</div>

<script>
    $(document).scroll(function () {
        var y = $(this).scrollTop();
        if (y > 800) {
            $('.toTop').fadeIn();
        } else {
            $('.toTop').fadeOut();
        }
    });
    $(document).ready (function() {
        $("#to-top-button").click(function() {
            $('html, body').animate({ scrollTop: 0 }, 'slow');
        });
    });
</script>