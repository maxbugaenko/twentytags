<?$this->headTitle("TwentyTags - Add tag")?>
<div class="message-container">
    <div class="message-title">
        Add your tag
    </div>
    <div class="message-description">
        Add any tag you would like to get updates about. We will review and
        add it very soon
    </div>
    <div class="button-block">
        <input type="text" id="tag-value" class="input-text input-large" placeholder="Enter tag ... ">
        <button id="add-tag-button"  class="header-button-red header-button-large">Add</button>
    </div>
    <div id="error-message">
    </div>
</div>

<script>
    $(document).ready(function() {
        $("#add-tag-button").click(function() {
            $.post(
            "<?=$this->url(array('controller'=>'index', 'action'=>'addusertag'), 'default', true)?>",
            { 'tag': $("#tag-value").val() },
            function(data) {
                if (data == "OK") {
                    location.href = "following";
                } else {
                    $("#error-message").html(data);
                }
            }
            )
        });
    })
</script>